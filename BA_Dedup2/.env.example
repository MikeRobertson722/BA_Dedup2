# Database Configuration
DB_TYPE=sqlite
DB_CONNECTION_STRING=sqlite:///ba_dedup.db
# For SQL Server: mssql+pyodbc://user:password@server/database?driver=ODBC+Driver+17+for+SQL+Server
# For PostgreSQL: postgresql://user:password@localhost:5432/database

# Input Configuration
INPUT_TYPE=csv
INPUT_PATH=input/sample_data.csv
INPUT_TABLE=business_associates_raw

# Output Configuration
OUTPUT_TABLE=business_associates_deduplicated
OUTPUT_AUDIT_TABLE=ba_dedup_audit

# Deduplication Settings
SIMILARITY_THRESHOLD=0.85
MATCH_FIELDS=name,address,city,state,zip
MERGE_STRATEGY=most_complete

# Processing Settings
BATCH_SIZE=1000
LOG_LEVEL=INFO

# Optional: Field mappings if source has different column names
# FIELD_MAP={"ba_name": "name", "ba_address": "address"}
